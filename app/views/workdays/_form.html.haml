= form_for @workday do |f|
  - if @workday.errors.any?
    #error_explanation
      %h2= "#{pluralize(@workday.errors.count, "error")} prohibited this workday from being saved:"
      %ul
        - @workday.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :project_id
    = f.number_field :project_id
  .field
    = f.label :dayDate
    = f.date_select :dayDate
  .field
    = f.label :hoursWorked
    = f.text_field :hoursWorked
  .field
    = f.label :notes
    = f.text_area :notes
  .actions
    = f.submit 'Save'
